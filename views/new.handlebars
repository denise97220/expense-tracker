<head>
<link rel="stylesheet" href="/stylesheets/new.css">
</head>

<div class="container">
    {{!-- 記帳列表 --}}
    <div class="income_container">
        <div class="title">
            <h1>新增帳目</h1>
        </div>
        <div class="list"></div>
            <form class="income_form" action="/expense-tracker/new" method="POST" >
                <div class="form_name">
                    <label for="name">名稱：</label>
                    <input name="name" id="name" type="text" maxlength="20" placeholder="發薪水 ..." style="display: inline;" required>
                </div>
                <div class="form_date">
                    <label for="date">日期：</label>
                    <input name="date" id="date" type="date" min="2021-01-01" max="2021-12-31" style="display: inline;" required>
                </div>
                <div class="form_category">
                    <label class="form-label" for="category">類別</label>
                    <input class="form-control" list="categorys" name="category" placeholder="category" id="category" maxlength="10"
                        required>
                    <datalist id="categorys">
                        <option>家居物業</option>
                        <option>交通出行</option>
                        <option>休閒娛樂</option>
                        <option>餐飲食品</option>
                        <option>其他</option>
                        <option>收入</option>
                    </datalist>
                </div>
                <div class="form_amount">
                    <label for="amount">金額：</label>
                    <input name="amount" id="amount" type="number" maxlength="20" placeholder="70000 ..." style="display: inline;" required>
                </div>
                
                <button class="submit" type="submit">送出</button>
            </form>
                <button class="back" type="submit">
                    <a href="/">返回</a>
                </button>
        </div>
    </div>
</div>

